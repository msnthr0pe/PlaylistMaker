<resources>
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="editTextStyle">@style/EditText</item>

        <item name="titleScreenBackground">@color/yp_black</item>
        <item name="genericScreenBackground">@color/yp_black</item>
        <item name="genericTextColor">@color/white</item>
        <item name="settingsIconColor">@color/white</item>
        <item name="searchHintColor">@color/yp_black</item>
        <item name="searchBackgroundColor">@color/white</item>

    </style>

    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/genericTextColor</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="EditText" parent="android:Widget.EditText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColorHint">?attr/searchHintColor</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/regular_size</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:insetTop">@dimen/default_inset</item>
        <item name="android:insetBottom">@dimen/default_inset</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />
</resources>