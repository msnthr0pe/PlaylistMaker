<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="titleScreenBackground">@color/yp_black</item>

        <item name="android:windowLightStatusBar">false</item>

        <item name="materialButtonStyle">@style/MainButtonStyle</item>
        <item name="android:textViewStyle">@style/MainTextView</item>
        <item name="android:background">?attr/titleScreenBackground</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:insetTop">@dimen/default_inset</item>
        <item name="android:insetBottom">@dimen/default_inset</item>
    </style>

    <style name="MainTextView" parent="BaseTextView">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="TabTextView" parent="BaseTextView">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/regular_size</item>
    </style>

    <style name="SettingsScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="genericScreenBackground">@color/yp_black</item>
        <item name="genericTextColor">@color/white</item>
        <item name="iconColor">@color/white</item>

        <item name="android:windowLightStatusBar">true</item>

        <item name="materialButtonStyle">@style/SettingsButtonStyle</item>
        <item name="android:textViewStyle">@style/BaseTextView</item>
    </style>

    <style name="SettingsButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">?attr/genericScreenBackground</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/regular_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/genericTextColor</item>
        <item name="android:paddingStart">@dimen/medium_margin</item>
        <item name="android:paddingVertical">@dimen/vertical_settings_margin</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:insetTop">@dimen/default_inset</item>
        <item name="android:insetBottom">@dimen/default_inset</item>
    </style>

    <style name="BaseTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/genericTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleTextView" parent="BaseTextView">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RegularTextView" parent="BaseTextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TrackInfoTextView" parent="BaseTextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/small_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SearchRecyclerStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="genericScreenBackground">@color/yp_black</item>
        <item name="iconColor">@color/white</item>
        <item name="genericTextColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

</resources>