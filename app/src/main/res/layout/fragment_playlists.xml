<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.media.fragments.PlaylistsFragment">

    <LinearLayout
        android:id="@+id/search_placeholder_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/retry_search_button"
            android:layout_width="142dp"
            android:layout_height="44dp"
            android:textSize="14sp"
            app:cornerRadius="54dp"
            android:textColor="?attr/genericScreenBackground"
            android:backgroundTint="?attr/genericTextColor"
            android:text="Новый плейлист"/>

        <ImageView
            android:id="@+id/search_placeholder"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="46dp"
            android:src="@drawable/empty_search_placeholder"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:gravity="center"
            android:text="@string/no_playlists_created"/>

    </LinearLayout>

</LinearLayout>